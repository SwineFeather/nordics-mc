# Supabase Configuration
# IMPORTANT: Replace these placeholder values with your actual Supabase credentials
# NEVER commit actual credentials to version control
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key_here

# Server-side Supabase Configuration (for server.js)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here

# Supabase Service Role Key (for admin operations - KEEP SECRET!)
# This key has full database access - NEVER expose it in frontend code
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Storage Configuration
VITE_STORAGE_DOMAIN=your-project-id.supabase.co
VITE_CDN_DOMAIN=your-project-id.supabase.co

# Server Configuration
PORT=3000
NODE_ENV=production

# Security Configuration
# Generate strong, random secrets for production use
SESSION_SECRET=your_session_secret_here_use_strong_random_string
CSRF_SECRET=your_csrf_secret_here_use_strong_random_string

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Security
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# CORS Configuration - Update with your actual domains
# Only include domains that should have access to your API
ALLOWED_ORIGINS=https://www.nordics.world,https://nordics.world,http://localhost:3000,http://localhost:5173

# Logging Configuration
LOG_LEVEL=info
SECURITY_LOG_LEVEL=warn

# Additional Security Settings
# Enable these in production for enhanced security
ENABLE_HTTPS_REDIRECT=false
ENABLE_HSTS=false
ENABLE_CSP=true
ENABLE_RATE_LIMITING=true
